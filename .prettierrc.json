{
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "vueIndentScriptAndStyle": true,
    "endOfLine": "auto",
    "printWidth": 100,
    "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-classnames"],
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.vue", "*.ts"],
            "options": {
                "printWidth": 100,
                "singleAttributePerLine": true
            }
        }
    ]
}
